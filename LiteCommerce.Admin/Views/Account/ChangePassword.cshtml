@model LiteCommerce.Admin.Models.Password.EmployeePassword
@{

}
<div class="box box-primary">
    <form role="form" action="~/Account/ChangePassword" method="post">
        <div class="box-body">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">

                <label>Old Password: @Html.ValidationMessage("password", new { @style = "color: red" })</label>
                <input type="password" class="form-control" placeholder="Old password" name="password">
            </div>
            <div class="form-group">
                <label>New Password: @Html.ValidationMessage("nPassword", new { @style = "color: red" })</label>
                <input type="password" class="form-control" placeholder="New password" name="nPassword">
            </div>
            <div class="form-group">

                <label>Password: @Html.ValidationMessage("nlPassword", new { @style = "color: red" })</label>
                <input type="password" class="form-control" placeholder="Password" name="nlPassword">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/">
                Cancel
            </a>
        </div>
    </form>
</div>