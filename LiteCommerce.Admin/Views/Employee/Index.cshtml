@model LiteCommerce.Admin.Models.EmployeePaginationResult
@{
    ViewBag.Title = "Manage Employees";
    int i = 0;
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Employee" method="GET">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control" placeholder="Input search value..." name="searchValue" value="@Model.SearchValue">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
    </div>
</div>
<div class="container-fluid row" style="margin-bottom:10px;">
    <div class="col-sm-8">
        There are <b>@Model.RowCount</b> Employees. @string.Format("{0}/{1}", Model.Page, Model.PageCount)
    </div>
    <div class="col-md-4 text-right">
        <div class="btn-group">
            <a href="~/Employee/Input" class="btn btn-sm btn-primary">Add Employee</a>
            <button type="button" class="btn btn-sm btn-danger">Delete Employees</button>
        </div>
    </div>
</div>
<div class="box box-success">
    <div class="box-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width:30px">
                        <input type="checkbox" />
                    </th>
                    <th style="width:50px">#</th>
                    <th style="width:150px">Name</th>
                    <th style="width:150px">Address</th>
                    <th style="width:200px">Contact</th>
                    <th style="width:200px">Contact Info</th>
                    <th style="width:auto">Notes</th>
                    <th style="width:50px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Data)
                {
                    <tr>
                        <td>
                            <input type="checkbox" />
                        </td>
                        <td>@(++i)</td>
                        <td>
                            
                            <span style="color:#0094ff; font-weight:bold; display:block">
                               @employee.PhotoPath
                            </span>
                            <span style="color:#646464">
                               @employee.FirstName
                            </span>
                            <span style="color:#646464;font-weight:bold">
                                @employee.LastName
                            </span>
                        </td>
                        <td>
                            <span style="display:block">@employee.Address</span>
                        </td>
                        <td>
                            <span style="display:block"><i >BirthDate:</i>@employee.BirthDate</span>
                            <span style="display:block"><i >HireDate:</i>@employee.HireDate</span>
                            
                        </td>
                        <td>
                            <span style="display:block"><i class="fa fa-envelope-o"></i>@employee.Email</span>
                            <span style="display:block"><i class="fa fa-fax"></i>@employee.HomePhone</span>
                        </td>
                        <td>
                            <span style="display:block"><i>Notes:</i>@employee.Notes</span>
                        </td>
                        <td class="text-right">
                            <a class="btn btn-sm btn-default" href="~/Employee/Input/@employee.EmployeeID/">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="box-footer clearfix text-center">
        <ul class="pagination pagination-sm no-margin pull-right">

            @if (Model.Page > 1)
            {
                <li><a href="~/Employee?page=@(Model.Page - 1)@Model.SearchValue">&laquo;</a></li>

            }
            @if (Model.Page > 3)
            {
                <li><a href="~/Employee?page=1(@Model.SearchValue)">1</a></li>
                <li class="dots"><a href="#">...</a></li>
            }
            @if (Model.Page - 2 > 0)
            {
                <li><a href="~/Employee?page=@(Model.Page-2)@Model.SearchValue">@(Model.Page - 2)</a></li>
            }
            @if (Model.Page - 1 > 0)
            {
                <li><a href="~/Employee?page=@(Model.Page-1)@Model.SearchValue">@(Model.Page - 1)</a></li>
            }
            <li class="active"><a href="~/Employee?page=@Model.Page@Model.SearchValue">@Model.Page</a></li>
            @if (Model.Page + 1 < Model.PageCount + 1)
            {
                <li><a href="~/Employee?page=@(Model.Page+1)@Model.SearchValue">@(Model.Page + 1)</a></li>
            }
            @if (Model.Page + 2 < Model.PageCount + 1)
            {
                <li><a href="~/Employee?page=@(Model.Page+2)@Model.SearchValue">@(Model.Page + 2)</a></li>
            }
            @if (Model.Page < Model.PageCount - 2)
            {
                <li class="dots"><a href="#">...</a></li>
                <li><a href="~/Employee?page=@Model.PageCount@Model.SearchValue">@Model.PageCount</a></li>
            }
            @*@for (int page = 1; page <= model.pagecount; page++)
            {

            if (model.page == page)
            {
            <li class="active"><a href="~/Employee?page=@page@search">@page</a></li>
            }
            else
            {
            <li><a href="~/Employee?page=@page@search">@page</a></li>
            }


            }*@
            @if (Model.Page < Model.PageCount)
            {
                <li><a href="~/Employee?page=@(Model.Page + 1)@Model.SearchValue">&raquo;</a></li>
            }

        </ul>
    </div>
</div>